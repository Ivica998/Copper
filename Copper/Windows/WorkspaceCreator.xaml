<Window x:Class="Copper.WorkspaceCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Copper"
        mc:Ignorable="d"
        Title="WorkspaceCreator" Height="140" Width="250" ResizeMode="NoResize">
    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25">Input workspace name</Label>
        <TextBox x:Name="wsName" Background="#222222" HorizontalAlignment="Center" Margin="10,33,0,10" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Button Background="#222222" Padding="3 0 3 0" Content=" Create " HorizontalAlignment="Right" Margin="0,0,70,10" VerticalAlignment="Bottom" Click="Create_Button_Click"/>
        <Button Background="#222222" Padding="3 0 3 0" Content=" Cancel " HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="Cancel_Button_Click"/>
        <Label x:Name="l1" Foreground="#FF0055" FontSize="10" Padding="0,0,0,0" HorizontalContentAlignment="Left" Content="" Margin="95,53,10,0" VerticalAlignment="Top" Height="auto"/>

    </Grid>
</Window>
